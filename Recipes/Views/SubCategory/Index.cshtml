@model IEnumerable<Recipes.Models.SubCategory>

@{
    ViewBag.Title = "Recipe SubCategory List - MVC Recipe Database Example";
}

@Html.BodyTagUpdate("subcategory")
@Html.Partial("_RecipeNav")

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "styledForm" }))
{
    <fieldset>
        <div class="buttonlink">@Html.ActionLink("Create New", "Create")</div>
    </fieldset>

    foreach (var item in Model)
    {
    <ol>
        <li class="styled">
            <div class="display-button">@Html.ActionLink("Edit", "Edit", new { id = item.SubCategoryID, seofriendly = item.SubCategoryName.ToSeoUrl() })</div>
            <div class="display-button">@Html.ActionLink("Details", "Details", new { id = item.SubCategoryID, seofriendly = item.SubCategoryName.ToSeoUrl() })</div>
            <div class="display-button">@Html.ActionLink("Delete", "Delete", new { id = item.SubCategoryID, seofriendly = item.SubCategoryName.ToSeoUrl() })</div>
            <div class="display-info">@Html.DisplayFor(modelItem => item.SubCategoryName)</div>
            <div class="display-info">@Html.DisplayFor(modelItem => item.Description)</div>
        </li>
    </ol>
    }
}