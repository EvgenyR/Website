@model Recipes.ViewModels.SubCategoryViewModel

@{
    ViewBag.Title = "Delete Recipe SubCategory - MVC Recipe Database Example";
}

@Html.BodyTagUpdate("subcategory")
@Html.Partial("_RecipeNav")

<h3>Are you sure you want to delete this?</h3>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
    <legend>SubCategory</legend>

    <ol>
        <li class="styled">
            <div class="display-label">SubCategoryName</div>
            <div class="display-field">
                @Html.DisplayFor(model => model.SubCategory.SubCategoryName)
            </div>
        </li>
    </ol>

    <ol>
        <li class="styled">
            <div class="display-label">Description</div>
            <div class="display-field">
                @Html.DisplayFor(model => model.SubCategory.Description)
            </div>
        </li>
    </ol>
    </fieldset>
    
    <fieldset>
        <input class="buttonlink" type="submit" value="Delete" />
        <div class="buttonlink">@Html.ActionLink("Back to List", "Index")</div>
    </fieldset>   
}
