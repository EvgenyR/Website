@model Recipes.ViewModels.BlogViewModel
@{
    ViewBag.Title = "Create New Blog - MVC Blog Engine Example";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "styledForm" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Blog</legend>
        @Html.HiddenFor(model => model.Blog.BlogID)
        <ol class="styled">
            <li class="styled">
                @Html.LabelFor(model => model.Blog.Title)
                @Html.EditorFor(model => model.Blog.Title)
                @Html.ValidationMessageFor(model => model.Blog.Title)
            </li>
        </ol>
        <ol class="styled">
            <li class="styled">
                @Html.LabelFor(model => model.Blog.BloggerID)
                @Html.DropDownListFor(model => model.Blog.BloggerID, new SelectList(Model.Bloggers, "BloggerID", "BloggerName", Model.Blog.BloggerID))
                @Html.ValidationMessageFor(model => model.Blog.BloggerID)
            </li>
        </ol>
    </fieldset>
    
    <fieldset>
        <input class="buttonlink" type="submit" value="Create" />
        <div class="buttonlink">@Html.ActionLink("Back to List", "../Blog/List")</div>
    </fieldset>
}