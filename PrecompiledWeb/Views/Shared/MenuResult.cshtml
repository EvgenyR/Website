@model Recipes.ViewModels.LeftMenuViewModel

@{ Layout = null; }

<div class="menu">
    <ul>
        <li><h2>Navigation</h2>
            <ul>
                <li>@Html.ActionLink("Information", "../Home/Index")
                    <ul>
                        <li>@Html.ActionLink("About Me", "../Home/Index")
                        <li>@Html.ActionLink("Resume", "../Resume")
                        <li><a href="https://www.elance.com/s/evgenyr/10183">Elance</a></li>
                    </ul>
                </li>
                <li><a href="#">Examples</a>
                    <ul>
                        <li>@Html.ActionLink("Blog Engine", "../Blog/Index")
                        <li>@Html.ActionLink("Yahoo Finance", "../Yahoo/Index")
                        <li>@Html.ActionLink("Stepping Stone", "../Stone/Index")
                        <li>@Html.ActionLink("Google Search", "../Search/Index")
                        <li><a href="#">More Examples</a>
                            <ul>
                                <li>@Html.ActionLink("Logging Engine", "../Logging/Index")</li>
                                <li>@Html.ActionLink("Photobox Gallery", "../Photobox/Index")
                                <li>@Html.ActionLink("MVC Game Of Life", "../Game/Index")
                                <li>@Html.ActionLink("jQuery Game Of Life", "../jqGame/Index")
                            </ul>
                        <li>@Html.ActionLink("Recipes", "../Recipe/Index")
                        <ul>
                        @for(int i=0; i<Model.elements.Count(); i++)
                        {
                         <li>@Html.ActionLink(Model.elements[i].name, @Html.CategoryAction(Model.elements[i].id).ToString())
                            <ul>
                                @for(int j=0; j<Model.elements[i].children.Count(); j++)
                                {
                                    <li>@Html.ActionLink(Model.elements[i].children[j].name, @Html.SubCategoryAction(Model.elements[i].children[j].id).ToString())</li>
                                }
                            </ul>
                        </li>                           
                        }
                    </ul>
                    </li>
                    </ul>
                </li>
                <li><a href="#">Latest Blog Posts</a>
                    <ul>
                    @foreach(Recipes.Models.Post post in Model.posts)
                    {
                        <li><a href=@post.BloggerUrl>@post.Title</a></li>
                    }
                    </ul>
                </li>
                <li>@Html.ActionLink("TODO List", "../Home/Todo")</li>
            </ul>
        </li>
    </ul>
</div>

