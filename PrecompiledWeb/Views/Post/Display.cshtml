@model Recipes.Models.Post
<link href="@Url.Content("~/Content/blog.css")" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = Model.Title;

    string divID = "hide";
    string btnID = "btn";
}

@using (Html.BeginForm())
{
<div id="middlecolumn">
    <div class="blogcontainer">
        <h3 class="title">@Model.Title</h3>
        <div class="info"><span class="submitted">Submitted on @Model.DateCreated</span></div>
        @MvcHtmlString.Create(Model.BriefContent)
        <div class="buttonlink"><a id=@btnID href="javascript:toggleDiv('@divID', '@btnID');">Show more</a></div>
        <div id=@divID  style="display:none">@MvcHtmlString.Create(Model.RestOfContent)</div>
    </div>
</div>
}
<script type="text/javascript">
<!--
    function toggleDiv(divId, btnId) {
        $("#" + divId).toggle();
        if ($("#" + divId).css('display') == 'none')
        { $("#" + btnId).html('Show more'); }
        else
        { $("#" + btnId).html('Show less'); }
    }
-->
</script>

