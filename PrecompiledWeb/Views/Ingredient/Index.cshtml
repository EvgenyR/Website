@model IEnumerable<Recipes.Models.Ingredient>

@{
    ViewBag.Title = "Index";
}

@Html.BodyTagUpdate("ingredient")
@Html.Partial("_RecipeNav")

<form>
    <fieldset>
        <div class="buttonlink">@Html.ActionLink("Create New", "Create")</div>
    </fieldset>


@foreach (var item in Model) 
{
    <ol>
        <li class="styled">
            <div class="display-button">@Html.ActionLink("Edit", "Edit", new { id=item.IngredientID }) </div>
            <div class="display-button">@Html.ActionLink("Details", "Details", new { id = item.IngredientID }) </div>
            <div class="display-button">@Html.ActionLink("Delete", "Delete", new { id = item.IngredientID }) </div>
            <div class="display-info">@item.IngredientName</div>
        </li>
    </ol>
}
</form>